<div class="container mt-5">
  <!-- Table for All Users -->
  <h2 class="mb-3">Users</h2>
  <table class="table table-striped table-hover mb-5">
    <thead class="table-dark">
      <tr class="text-center">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Contact Number</th>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Courses Count</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
        <tr class="text-center">
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.contact_number %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.roles.map(&:name).join(', ') %></td>
          <td><%= user.courses.count %></td>
          <td>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Table for Admins and Moderators -->
  <h2 class="mb-3">Admins and Moderators</h2>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr class="text-center">
        <th>First Name</th>
        <th>Last Name</th>
        <th>Contact Number</th>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @admins_and_moderators.each do |user| %>
        <tr class="text-center">
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.contact_number %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.roles.map(&:name).join(', ') %></td>
          <td>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>