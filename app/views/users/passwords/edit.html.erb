<div class="card shadow m-auto" style = "width: 50%">
  <div class="card-header">
    <h3 class="card-title text-center">Change Password</h3>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "New password", class: "form-label" %>
        <% if @minimum_password_length %>
          <div class="form-text mb-2">(<%= @minimum_password_length %> characters minimum)</div>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Change my password", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 d-flex flex-column justify-content-center align-items-center fs-6">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

